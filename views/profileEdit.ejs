<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Profile</title>
    <%- include('partials/_style') %>
</head>

<body>
    <%- include('partials/_navbar') %>

    <h1>Update Profile</h1>

    <% if (error) { %>
    <section>
        <p class="error"><%= error %></p>
    </section>
    <% } %>

    <form action="/user-details/edit/<%= id %>" method="POST">
        <table>
            <tr>
                <td><label>Username</label></td>
                <td><input type="text" name="username" value="<%= user.username %>"></td>
            </tr>
            <tr>
                <td><label>Email</label></td>
                <td><input type="text" name="email" value="<%= user.email %>"></td>
            </tr>
            <tr>
                <td><label>First Name</label></td>
                <td><input type="text" name="firstName" value="<%= user.UserDetail?.firstName %>"></td>
            </tr>
            <tr>
                <td><label>Last Name</label></td>
                <td><input type="text" name="lastName" value="<%= user.UserDetail?.lastName %>"></td>
            </tr>
            <tr>
                <td><label>Phone Number</label></td>
                <td><input type="text" name="phoneNumber" value="<%= user.UserDetail?.phoneNumber %>"></td>
            </tr>
            <tr>
                <td><label>Date Of Birth</label></td>
                <td><input type="date" name="dateOfBirth" value="<%= user.UserDetail?.date %>"></td>
            </tr>
            <tr>
                <td><label>Address</label></td>
                <td><textarea name="address"><%= user.UserDetail?.address %></textarea></td>
            </tr>
        </table> <br>

        <button type="submit">Update</button>
    </form>

    <%- include('partials/_footer', { menu: "Update Profile" }) %>
</body>

</html>